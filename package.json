{
  "name": "iptv-web-player",
  "version": "1.0.0",
  "description": "Web-based IPTV Player with EPG support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "iptv",
    "streaming",
    "mpegts",
    "electron",
    "desktop",
    "app",
    "web"
  ],
  "author": "IPTV Player",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mpegts.js": "^1.7.2"
  },
  "build": {
    "appId": "com.iptvplayer.webapp",
    "productName": "IPTV Web Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "web-iptv.html",
      "epg-server.js",
      "config-loader.js",
      "package.json",
      "samples/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "env.example",
        "to": "env.example"
      }
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
